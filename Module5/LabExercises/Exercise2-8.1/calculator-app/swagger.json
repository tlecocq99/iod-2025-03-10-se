{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "The Dream Calculator",
    "description": "Exercise project to gain proficiency with Node.js and Express",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Calculator",
      "description": "API for Calculator"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/calculator/add": {
      "get": {
        "tags": ["Addition Service"],
        "summary": "Add 2 numbers",
        "parameters": [
          {
            "name": "num1",
            "in": "query",
            "description": "The First Number"
          },
          {
            "name": "num2",
            "in": "query",
            "description": "The Second number"
          }
        ],
        "responses": {
          "200": {
            "description": "This service allows you to add two numbers together"
          }
        }
      }
    },
    "/calculator/subtract": {
      "get": {
        "tags": ["Subtraction Service"],
        "summary": "Subtract 2 numbers",
        "parameters": [
          {
            "name": "num3",
            "in": "query",
            "description": "The First Number"
          },
          {
            "name": "num4",
            "in": "query",
            "description": "The Second number"
          }
        ],
        "responses": {
          "200": {
            "description": "This service allows you to subtract two numbers"
          }
        }
      }
    },
    "calculator/multiply": {
      "get": {
        "tags": ["Multiplication Service"],
        "summary": "Multiply 2 numbers",
        "parameters": [
          {
            "name": "num5",
            "in": "query",
            "description": "The First Number"
          },
          {
            "name": "num6",
            "in": "query",
            "description": "The Second number"
          }
        ],
        "responses": {
          "200": {
            "description": "This service allows you to multiply two numbers"
          }
        }
      }
    },
    "calculator/divide": {
      "get": {
        "tags": ["Division Service"],
        "summary": "Divide 2 numbers",
        "parameters": [
          {
            "name": "num7",
            "in": "query",
            "description": "The First Number"
          },
          {
            "name": "num8",
            "in": "query",
            "description": "The Second number"
          }
        ],
        "responses": {
          "200": {
            "description": "This service allows you to divide two numbers"
          }
        }
      }
    }
  }
}
